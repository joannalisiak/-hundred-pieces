
<div class="container mt-5">
  <div class="row banner-row d-flex flex-row align-items-center justify-content-center">
      <div class="col-lg-5 col-md-5 col-sm-12">
          <%= image_tag "lego-banner.jpg", class: 'w-100' %>
      </div>
      <div class="col-lg-7 col-md-7 col-sm-12 banner-text">
          <h1>100 PIECES</h1>
          <h1>100% fun</h1>
          <p class="pr-4">Do you love LEGO? Join 100 PIECES, exchange LEGO sets with other builders and have unlimitied fun!</p>
          <%= link_to "Get started", new_user_registration_path, class: "btn btn-danger" %>
          <%= link_to legos_path do %>
          <button type="button" class="btn btn-outline-danger ml-2">Browse LEGO</button>
          <% end %>
      </div>
    </div>
    
  </div>
</div>



<div class="container how-it-works my-5">
    <h3 class="mb-4">HOW IT WORKS</h3>
    <div class="row d-flex flex-row justify-content-center">
        <div class="col-md-5 col-lg-3 col-sm-12 m-4 card p-3 rounded justify-content-center">
            <h5 class="p-3">Choose your LEGO</h5>
            <%= image_tag "choice.svg", class: 'images-card' %>
            <p class="p-3">Are you looking for a new challenge? Browse all LEGO sets available near you.</p>
        </div>
        <div class="col-md-5 col-lg-3 col-sm-12 m-4 card p-3 rounded justify-content-center">
            <h5 class="p-3">Make a booking</h5>
            <%= image_tag "booking.svg", class: 'images-card' %>
            <p class="p-3">Have you found the LEGO set you like? Make a booking with the owner.</p>
        </div>
        <div class="col-md-5 col-lg-3 col-sm-12 m-4 card p-3 rounded justify-content-center">
            <h5 class="p-3">Build it!</h5>
            <%= image_tag "build.svg", class: 'images-card' %>
            <p class="p-3">Now pick up your LEGO set and get down to putting those bricks together!</p>
        </div>

   
  </div>
</div>
