<div class="container my-5">
  <div class="form-new">
    <p class="form-header">Add your LEGO offer</p>
    <%= simple_form_for @lego do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :pieces %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add your LEGO", class: 'form-btn' %>
    <% end %>
  </div>
