<div class="container mt-5">
  <div class="form-new">
    <p class="form-header">Add your lego offer here!</p>
    <%= simple_form_for @lego do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :pieces %>
    <%= f.input :description %>
    <%= f.submit "Add your lego!", class: 'form-btn' %>
    <% end %>
  </div>
</div>
