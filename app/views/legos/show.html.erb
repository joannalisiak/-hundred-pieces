<div class="container mt-5">

  <div class="card showcard">
    <% if @lego.photo.attached? %>
  <%= cl_image_tag @lego.photo.key, crop: :fill, class: "show-image" %>
  <% else %>
    <%= image_tag 'lego-game.jpg', class: "show-image" %>
  <% end %>

    <div class="details-show w-100 p-4">
      <div class="details-show-text">
        <h5 class="mb-4"><%= @lego.name %></h5>
        <p>Number of pieces: <strong><%= @lego.pieces %></strong></p>
        <p class="">Location: <strong><%= @lego.address %></strong></p>
        <p class=""><%= @lego.description %></p>
      </div>
      <div class="details-show-icons">
        <% if @lego.user == current_user %>
          <%= link_to edit_lego_path(@lego) do %>
            <i class="fas fa-pencil-alt mr-3"></i>
          <% end %>
          <%= link_to lego_path, method: 'delete', data: {confirm: "Are you sure?"} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% else %>
          <%= link_to "#" do %>
            <i class="fas fa-heart"></i>
          <% end %>
        <% end %>
      </div>
      <div class="details-show-price">
        <h5 class="text-right text-danger mb-0">â‚¬ <%= number_with_precision(@lego.price, precision: 2) %> per day</h5>
      </div>
    </div>
  </div>

  <%= link_to legos_path, class: "btn btn-light" do %>
    
  <% end %>
</div>

<div class="d-flex justify-content-center">

    <%= link_to   legos_path, class: 'btn btn-light rounded mr-1' do %>
      <i class="fas fa-undo-alt"></i> Back to LEGO
    <% end %>
</div>
