<section id="home">
<div class="p-2">
<div class="d-flex">
<div class="col-6">
<%= link_to 'Go back', root_path, class: "btn btn-light mt-4"  %>
 <h2 class="mb-4 mt-2">LEGO sets near you</h2>
    <% @legos.each do |lego| %>
      <%= link_to lego_path(lego) do %>
        <div class="card-product">

           <% if lego.photo.attached? %>
              <%= cl_image_tag lego.photo.key, crop: :fill %>
            <% else %>
              <%= image_tag 'heads.jpg' %>
            <% end %>

          <div class="card-product-infos">
            <h2 class="title-card"><%= lego.name %></h2>
            <p>Have fun with <strong><%= lego.pieces %> pieces</strong> for <%= number_with_precision(lego.price, precision: 2) %> EUR per day.</p>
          </div>
        </div>
      <% end %>
    <% end %>
</div>

    <div
    id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
</div>
</section>