<section id="home">
  <div class="container p-2">
    <div class="search-bar mt-5">
          
      <%= form_tag legos_path, method: :get, class: "w-100 d-flex form-flex-end" do %>
          
        <div class="form-group form-flex-1 mb-0 mr-2">
          <label for="lego-input">LEGO</label>
          <%= text_field_tag :lego_query,
            params[:lego_query],
            class: "form-control",
            id: "lego-input",
            placeholder: "What?"
          %>
        </div>

        <div class="form-group form-flex-1 mb-0 mr-2">
          <label for="lego-input">Min Pieces</label>
          <%= text_field_tag :min_pieces,
            params[:min_pieces],
            class: "form-control",
            id: "lego-input",
            placeholder: "What?"
          %>
        </div>

        <div class="form-group form-flex-1 mb-0 mr-2">
          <label for="lego-input">Max Pieces</label>
          <%= text_field_tag :max_pieces,
            params[:max_pieces],
            class: "form-control",
            id: "lego-input",
            placeholder: "What?"
          %>
        </div>

        <div class="form-group form-flex-1 mb-0 mr-2">
          <label for="location-input">Location</label>
          <%= text_field_tag :location_query,
            params[:location_query],
            class: "form-control",
            id: "location-input",
            placeholder: "Where?"
          %> 
        </div>

        <%= submit_tag "Search", class: "btn btn-outline-danger form-flex-1" %>

      <% end %>
    </div>
    <div class="row">
      <div class="col-6">
        <h2 class="mb-4 mt-5">LEGO sets near you</h2>

        <% @legos.each do |lego| %>
          <%= link_to lego_path(lego) do %>
            <div class="card-product">

              <% if lego.photo.attached? %>
                <%= cl_image_tag lego.photo.key, crop: :fill %>
              <% else %>
                <%= image_tag 'heads.jpg' %>
              <% end %>

              <div class="card-product-infos">
                <h2 class="title-card"><%= lego.name %></h2>
                <p>Have fun with <strong><%= lego.pieces %> pieces</strong> for â‚¬ <%= number_with_precision(lego.price, precision: 2) %> per day.</p>
              </div>
            </div>
          <% end %>
        <% end %>
          
      </div>

      <div class="col-6">
        <div
          id="map"
          style="width: 100%; height: 100vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
    </div>
</section>