<section id="home">
  <div class="container p-2">
    <div class="row">
      <div class="col-6">
        <%= link_to 'Go back', root_path, class: "btn btn-light mt-4"  %>
        <h2 class="mb-4 mt-2">LEGO sets near you</h2>
        <div class="search-bar mb-4">
          <%= form_tag legos_path, method: :get do %>
            <div class="d-flex">
                <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Find LEGO"
                %>
                <%= submit_tag "Search", class: "btn btn-outline-danger ml-2" %>
            </div>
          <% end %>
        </div>
        <% @legos.each do |lego| %>
          <%= link_to lego_path(lego) do %>
            <div class="card-product">
              <% if lego.photo.attached? %>
                <%= cl_image_tag lego.photo.key, crop: :fill %>
              <% else %>
                <%= image_tag 'heads.jpg' %>
              <% end %>
              <div class="card-product-infos d-flex w-100 justify-content-between">
              <div>
                <h2 class="title-card"><%= lego.name %></h2>
                <p><i class="fas fa-map-marker-alt"></i> <%= lego.address %></p>
                <p>Have fun with <strong><%= lego.pieces %> pieces</strong> for â‚¬ <%= number_with_precision(lego.price, precision: 2) %> per day.</p>
              </div>
              </div>
            </div>
          <% end %>
        <% end %>

      </div>

      <div class="col-6">
        <div
          id="map"
          style="width: 100%; height: 100vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
    </div>
</section>